{
    "manifest_version": 3,
    "name": "ClipClarity",
    "description": "ClipClarity simplifies selected text by providing explanations via ChatGpt API.",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_icon": {
        "16": "./images/icon-16.png",
        "32": "./images/icon-32.png",
        "48": "./images/icon-48.png",
        "128": "./images/icon-128.png"
      }
    },
    "background": {
      "service_worker": "./public/background.js"
    },
    
    "icons": {
      "16": "./images/icon-16.png",
      "32": "./images/icon-32.png",
      "48": "./images/icon-48.png",
      "128": "./images/icon-128.png"
    }
    
  }
  
  